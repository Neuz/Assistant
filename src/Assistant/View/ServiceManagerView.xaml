                                              Margin="5"
                                              SizeMode="Normal" Label="安装" ToolTip="安装服务"
                                              IconTemplate="{StaticResource IconAppAdd}"
                                              Command="{Binding InstallCommand}"
                                              CommandParameter="{Binding MySQL}" />
                                <sf:ButtonAdv Grid.Column="1"
                                              Margin="5"
