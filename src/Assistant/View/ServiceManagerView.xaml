<UserControl x:Class="Assistant.View.ServiceManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:Assistant.ViewModel"
             xmlns:cvt="clr-namespace:Assistant.Utils.Converters"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:ServiceManagerViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <cvt:BoolColorConverter x:Key="BoolColorConverter" />
        <cvt:BoolStringConverter x:Key="BoolStringConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Margin="10,5,10,0" FontSize="18" FontWeight="Bold" Content="{Binding Title}" />
        <Button Grid.Row="0" Content="刷新" Width="40" Height="30" HorizontalAlignment="Right" Margin="10,5,10,0"
                Command="{Binding FlushCommand}" />
        <Separator Margin="10,0,10,0" Grid.Row="1" Height="2" HorizontalAlignment="Stretch" />
        <sf:CardView Grid.Row="2"
                     CanGroup="False"
                     ShowHeader="False"
                     Orientation="Horizontal">
            <sf:CardViewItem Header="{Binding MySQLDisplay}">
                <StackPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Margin="5" FontSize="12" Text="安装状态" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Margin="5" FontSize="12" Foreground="{Binding MySQLInstalled ,Converter={StaticResource BoolColorConverter}}"
                                   Text="{Binding MySQLInstalled, Converter={StaticResource BoolStringConverter}, ConverterParameter='已安装|未安装'}" />
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Margin="5" FontSize="12" Text="服务状态" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Margin="5" FontSize="12" Foreground="Green"
                                   Text="运行中" />
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" MinWidth="50" Margin="5" Content="安装" />
                        <Button Grid.Column="1" MinWidth="50" Margin="5" Content="卸载" />
                        <Button Grid.Column="2" MinWidth="50" Margin="5" Content="日志" />
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" MinWidth="50" Margin="5" Content="启动" />
                        <Button Grid.Column="1" MinWidth="50" Margin="5" Content="停止" />
                        <Button Grid.Column="2" MinWidth="50" Margin="5" Content="重启" />
                    </Grid>
                </StackPanel>
            </sf:CardViewItem>
        </sf:CardView>
        <TextBox Grid.Row="3" Text="[2022-06-10 00:22:00] 服务启动成功"
                 HorizontalContentAlignment="Left"
                 VerticalContentAlignment="Top"
                 Margin="10,0,10,10" />
    </Grid>


</UserControl>